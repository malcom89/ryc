<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Moto Prestamos</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/1.7.0/css/buttons.dataTables.min.css" rel="stylesheet" />
</head>
<body>

    <div class="container">

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="navbar-header">

                @Html.ActionLink("R & C SOLUCIONES FINANCIERAS", "Index", "Prestamoes", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" id="navbarScrollingDropdown" aria-expanded="false"> <span class="nav-label">Mantenimiento</span> <span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                            <li>@Html.ActionLink("Clientes", "Index", "Clientes", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Marcas", "Index", "Marcas", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Modelos", "Index", "Modeloes", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Tipo Prestamo", "Index", "TipoPrestamoes", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Tipo Gastos Fijos", "ListTipoGastosFijos", "gastosFijos", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Caja Chica", "createCajaChica", "gastosFijos", null, new { @class = "dropdown-item" })</li>

                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" id="navbarScrollingDropdown" aria-expanded="false">
                            <span class="nav-label">
                                Prestamos
                            </span>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                            <li>@Html.ActionLink("Prestamos", "Index", "Prestamoes", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Reporte de Pagos", "pagosReport", "Prestamoes", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Balance General", "balanceGeneral", "Prestamoes", null, new { @class = "dropdown-item" })</li>


                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" id="navbarScrollingDropdown" aria-expanded="false">
                            <span class="nav-label">
                                Administrativo
                            </span>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                            <li>@Html.ActionLink("Mantenimiento Caja Chica", "mantenimientoCajaChica", "gastosFijos", null, new { @class = "dropdown-item" })</li>
                           
                            <li>@Html.ActionLink("Gastos Fijos", "Index", "gastosFijos", null, new { @class = "dropdown-item" })</li>


                        </ul>
                    </li>

                </ul>
            </div>
        </nav>
    </div>

    <div class="container body-content">
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Moto Credito</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.0/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.0/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.0/js/buttons.print.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#generalTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
    </script>
</body>
</html>






