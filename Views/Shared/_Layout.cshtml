<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Moto Prestamos</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400&display=swap" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/1.7.0/css/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="https://pro.fontawesome.com/releases/v5.12.0/css/all.css" rel="stylesheet" />
    <link href="https://pro.fontawesome.com/releases/v5.12.0/css/all.css" rel="stylesheet" />
    
</head>
<body class=" p-0 m-0 min-vh-100 bg-muted" >

    <div class="w-100 min-vh-100 p-0 m-0 bg-muted d-flex justify-content-start">

        <div class="col-md-3 min-vh-100 p-0 m-0 bg-white shadow mr-3" style="overflow:hidden;" id="sideba">
            <div class="d-flex justify-content-start align-items-center m-3">
                <img src="~/Content/logo.png" height="60" width="340" class="text-center" />
            </div>
            <div class="w-100 m-0 p-0">
                <ul class="nav w-100 p-4 m-0 d-flex flex-column">

                    <li class="nav-item p-0 m-0 w-100 mb-4">
                        <a href="#" class="nav-link p-0 m-0 w-100 d-flex justify-content-between align-items-center drop" >
                            <span class="p-0 m-0">
                                <i class="fas fa-list text-primary size-20 mr-3"></i> <span class="size-14 text-muted sizeSpace">MANTENIMIENTO</span>
                            </span>
                            <i class="fas fa-chevron-down text-muted size-14"></i>
                        </a>
                        <ul class="nav w-100 p-0 m-0  d-flex flex-column d-none uld" >
                            <br />
                            <li class="nav-item p-0 m-0 mb-3">@Html.ActionLink("Clientes", "Index", "Clientes", null, new { @class = "text-muted text-decoration-none size-14" })</li>
                            <li class="nav-item p-0 m-0 mb-3">@Html.ActionLink("Marcas", "Index", "Marcas", null, new { @class = "text-muted text-decoration-none size-14" })</li>
                            <li class="nav-item p-0 m-0 mb-3">@Html.ActionLink("Modelos", "Index", "Modeloes", null, new { @class = "text-muted text-decoration-none size-14" })</li>
                            <li class="nav-item p-0 m-0 mb-3">@Html.ActionLink("Tipo Prestamo", "Index", "TipoPrestamoes", null, new { @class = "text-muted text-decoration-none  size-14" })</li>
                            <li class="nav-item p-0 m-0 mb-3">@Html.ActionLink("Tipo Gastos Fijos", "ListTipoGastosFijos", "gastosFijos", null, new { @class = "text-muted text-decoration-none size-14" })</li>
                            <li class="nav-item p-0 m-0 mb-3">@Html.ActionLink("Caja Chica", "createCajaChica", "gastosFijos", null, new { @class = "text-muted text-decoration-none size-14" })</li>

                        </ul>
                    </li>
                    <li class="nav-item p-0 m-0 w-100 mb-4">
                        <a href="#" class="nav-link p-0 m-0 w-100 d-flex justify-content-between align-items-center drop">
                            <span class="p-0 m-0">
                                <i class="fas fa-table text-primary size-20 mr-3"></i> <span class="size-14 text-muted sizeSpace">PRESTAMOS</span>
                            </span>
                            <i class="fas fa-chevron-down text-muted size-14"></i>
                        </a>
                        <ul class="nav w-100 p-0 m-0 d-flex  flex-column d-none uld">
                            <br />
                            <li class="nav-item p-0 m-0 mb-3">@Html.ActionLink("Prestamos", "Index", "Prestamoes", null, new { @class = "text-muted text-decoration-none size-14" })</li>
                            <li class="nav-item p-0 m-0 mb-3">@Html.ActionLink("Reporte de Pagos", "pagosReport", "Prestamoes", null, new { @class = "text-muted text-decoration-none size-14" })</li>
                            <li class="nav-item p-0 m-0 mb-3">@Html.ActionLink("Balance General", "balanceGeneral", "Prestamoes", null, new { @class = "text-muted text-decoration-none size-14" })</li>
                            <li class="nav-item p-0 m-0 mb-3">@Html.ActionLink("Cierre", "cierre", "Prestamoes", null, new { @class = "text-muted text-decoration-none size-14" })</li>

                        </ul>
                    </li>

                    <li class="nav-item p-0 m-0 w-100 mb-4">
                        <a href="#" class="nav-link p-0 m-0 w-100 d-flex justify-content-between align-items-center drop" >
                            <span class="p-0 m-0">
                                <i class="fas fa-user text-primary size-20 mr-3"></i> <span class="size-14 text-muted sizeSpace">ADMINISTRATIVOS</span>
                            </span>
                            <i class="fas fa-chevron-down text-muted size-14"></i>
                        </a>
                        <ul class="nav w-100 p-0 m-0 d-flex  flex-column d-none uld">
                            <br />
                            <li class="nav-item p-0 m-0 mb-3">@Html.ActionLink("Mantenimiento Caja Chica", "mantenimientoCajaChica", "gastosFijos", null, new { @class = "text-muted text-decoration-none size-14" })</li>

                            <li class="nav-item p-0 m-0 mb-3">@Html.ActionLink("Gastos Fijos", "Index", "gastosFijos", null, new { @class = "text-muted text-decoration-none size-14" })</li>


                        </ul>
                    </li>

                </ul>
            </div>
        </div>
        <div class="col-md-9 p-0 m-0 d-flex flex-column" id="content">
            <div class="w-100 p-0 m-0 bg-white shadow-sm d-flex justify-content-between align-items-center" style="height:90px !important">
                <div class="h-100 p-0 m-0 d-flex justify-content-start align-items-center">
                    <i class="fal fa-bars text-primary size-20 ml-3 pointer" id="menu"></i>
                </div>

                <div class="h-100 p-0 m-0  d-flex justify-content-start align-items-center loginPerfil">
                    <div class="mr-2 p-1">
                        <span class="text-muted size-14 sizeSpace">MARCOS ANTONIO</span>
                    </div>
                    <img src="~/Content/credito.jpg" width="80" height="80" class="img-thumbnail mr-3"  alt="Alternate Text" />
                    
                </div>
            </div>
            <div class="p-3 m-0" style="background: #f9f8f8;">
                <br />
                @RenderBody()
            </div>
        </div>

     
    </div>

    <div id="log">
        <div class="col-md-3 p-0 m-0 position-fixed bg-white shadow-lg min-vh-100 " style="top:0px; right:-700px;   transition: 0.3s all ease-in-out;  z-index:9999;" id="cajaUser">
            <div class="w-100 m-0 p-0 pl-2 pr-2 d-flex flex-column">
                <div class="h-100 p-0 m-0 p-2 d-flex justify-content-start align-items-center">
                    <img src="~/Content/credito.jpg" width="80" height="80" class="img-thumbnail mr-2" alt="Alternate Text" />
                    <div class="mr-2">
                        <span class="text-muted size-14 sizeSpace">MARCOS ANTONIO</span>
                    </div>

                </div>
                <hr />

                <div class="h-100 p-0 m-0 p-2 d-flex justify-content-start align-items-center pointer">
                    <i class="fas fa-user text-primary size-14 mr-2"></i>

                    <span class="text-muted size-14 ">MI PERFIL</span>


                </div>

                <div class="h-100 p-0 m-0 p-2 d-flex justify-content-start align-items-center pointer" id="logou">
                    <i class="fas fa-sign-out-alt text-primary size-14 mr-2"></i>

                    <span class="text-muted size-14 ">CERRAR SESSIÓN</span>


                </div>
            </div>
        </div>

    </div>
    @*<div class="container body-content">
        <br />
        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Moto Credito</p>
        </footer>
    </div>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.0/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.0/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.0/js/buttons.print.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#generalTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
    </script>
    <link href="~/CSS/sidebar.css" rel="stylesheet" />
    <script src="~/JS/sidebar.js"></script>
    <script src="~/JS/Auth.js"></script>

</body>
</html>






