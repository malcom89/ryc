                <span class="text-muted sizeSpace size-14 mb-2">CANTIDAD PRESTAMOS</span>

                @Html.EditorFor(model => model.cantidadPrestamos, new { htmlAttributes = new { @class = "form-control mt-1 input", @readonly = "readonly" } })

            </div>


            <div class="col-md-4 p-0 m-0">
                <span class="text-muted sizeSpace size-14 mb-2">MONTO PRESTADO</span>
                @Html.EditorFor(model => model.montoPrestado, new { htmlAttributes = new { @class = "form-control mt-1 input", @readonly = "readonly" } })


            </div>
        </div>

        <div class=" d-flex justify-content-start align-items-center mb-3">


            <div class="col-md-4 p-0 m-0 ">
                <span class="text-muted sizeSpace size-14 mb-2">TOTAL GASTOS FIJOS</span>

                @Html.EditorFor(model => model.totalGastosFijos, new { htmlAttributes = new { @class = "form-control mt-1 input", @readonly = "readonly" } })


            </div>

            <div class="col-md-4 p-0 m-0">
                <span class="text-muted sizeSpace size-14 mb-2">TOTAL GASTOS CAJA CHICA</span>

                @Html.EditorFor(model => model.totalGastoCajaChica, new { htmlAttributes = new { @class = "form-control mt-1 input", @readonly = "readonly" } })


            </div>
            <div class="col-md-4 p-0 m-0">
                <span class="text-muted sizeSpace size-14 mb-2">TOTAL</span>


                @Html.EditorFor(model => model.totalEgresos, new { htmlAttributes = new { @class = "form-control mt-1 input", @readonly = "readonly" } })
               

            </div>
        </div>
    </div>

</div>