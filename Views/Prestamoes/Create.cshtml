                                                                    //        $.post("getClientes", { cedula: documento }, function (data) {


                                                                    //            $("#nombreCliente").text("");
                                                                    //            $("#nombreCliente").val(data.Nombres);

                                                                    //            $("#clienteId").text("");
                                                                    //            $("#clienteId").val(data.Nombres);

                                                                    //        });
                                                                    //    }
                                                                    //});
    </script>
}
