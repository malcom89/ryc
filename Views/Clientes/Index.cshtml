@model IEnumerable<MotoCredito.Entity.Clientes>

@{
    ViewBag.Title = "Clientes";
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink("Agregar", "Create")
</p>
<div class="table-responsive bg-white shadow rounded-lg p-3 m-0">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    <label>Tipo Identificacion</label>
                </th>
                <th>
                    <label>@Html.DisplayNameFor(model => model.NoIdentificacion)</label>
                </th>
                <th>
                    <label>@Html.DisplayNameFor(model => model.Nombres)</label>
                </th>
                <th>
                    <label>@Html.DisplayNameFor(model => model.Apellidos)</label>
                </th>


                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Tipoidentificacion1.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NoIdentificacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>


                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id })
                    </td>
                </tr>
            }
            </tbody>

    </table>
    

</div>