@model MotoCredito.ViewsModels.loginViewModels

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <link href="~/Content/login.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400&display=swap" rel="stylesheet">

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body class="min-vh-100 bg-muted p-0 m-0" style="overflow:hidden">

    <div class="w-100 p-0 m-0 d-flex justify-content-start align-items-center">
        <div class="col-8 p-0 m-0 min-vh-100 h-100">
            <img src="~/Content/credito.jpg" width="100%" height="100%" class="min-vh-100" alt="Alternate Text" />
        </div>

        <div class="col-md-4 p-0 m-0 bg-white shadow min-vh-100 d-flex justify-content-start align-items-start p-4">
            @using (Html.BeginForm("login", "usuarios", FormMethod.Post, new { @class = "w-100" }))
            {
            <div class="d-flex justify-content-center align-items-center">
                <img src="~/Content/logo.png" height="70" width="370" class="text-center" />
            </div>

                <br />
                <br />
                

                <!-- Login Form -->

                <div class="form-group d-flex flex-column ">
                    <label class="text-muted  size-14 ml-2 mb-2 sizeSpace">CORREO ELÉCTRONICO</label>
                    <input type="text" id="login" class="input p-0 m-0 w-100 bg-white" name="userLogin">
                </div>
                <br />
                <div class="form-group w-100 p-0 m-0 d-flex flex-column ">
                    <label class="text-muted  size-14 ml-2 mb-2 sizeSpace">CONTRASEÑA</label>
                    <input type="password" id="password" class="input p-0 m-0 bg-white" name="clave">

                </div>

                <div class="form-group d-flex flex-column mb-1 mt-2">
                    <a href="#" class="text-primary size-12 sizeSpace">¿ Has olvidado su contraseña ?</a>


                </div>

                <div class="form-group d-flex flex-column mb-2">
                    <label class="text-white ml-2">CORREO ELECTRONICO</label>
                    <input type="submit" class="input p-0 m-0 bg-primary text-white bg-primary" style="font-size:16px !important" value="Entrar">

                </div>





            }

        </div>

    </div>


    <style>

        * {
            font-family: 'Poppins', sans-serif;
            text-transform: uppercase !important
        }

        body {
            font-family: 'Poppins', sans-serif;
            text-transform: uppercase !important
        }
        .bg-muted {
            background: #e3e3e3 !important;
        }

        .input {
            width: 100% !important;
            height: 50px !important;
            border-radius: 0px !important;
            
            border: 0.1px solid #e3e3e3 !important;
        }

        text-muted {
            color:#e3e3e3 !important;
        }

        

        .sizeSpace {

            font-weight:600 !important;
        }

        .size-14 {
            font-size:14px !important
        }

        .size-12 {
            font-size:12px !important;
        }
    </style>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>

</body>
</html>