@model IEnumerable<MotoCredito.Entity.Clientes>

@{
    ViewBag.Title = "Clientes";
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink("Agregar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label>Tipo Identificacion</label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoIdentificacion)
        </th>
